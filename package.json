{
  "name": "day1",
  "version": "1.0.0",
  "description": "Small link shortener / redirecter server with basic auth. functions.",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "node_start": "cross-env NODE_ENV=PRODUCTION node dist/index.js",
    "watch_start": "cross-env NODE_ENV=PRODUCTION nodemon dist/index.js",
    "clean": "rimraf dist",
    "build": "tsc -v && npm run clean && npm run build-ts",
    "build-ts": "tsc",
    "watch": "nodemon --exec ts-node src/index.ts",
    "test": "mocha -r ts-node/register src/tests/*.spec.ts --exit"
  },
  "author": "Azolot",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-validator": "^5.3.0",
    "helmet": "^3.13.0",
    "jsonwebtoken": "^9.0.0",
    "reflect-metadata": "^0.1.12",
    "sqlite3": "^4.0.6",
    "typeorm": "0.2.14"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.1.5",
    "@types/chai-http": "^3.0.5",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.41",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mocha": "^5.2.5",
    "@types/request": "^2.48.1",
    "chai": "^4.1.2",
    "chai-http": "^4.2.0",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "request": "^2.88.0",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "typescript": "^2.9.1"
  }
}
